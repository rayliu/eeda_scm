                    "example": ""
                },
                "unit": {
                    "type": "string",
                    "description": "计量单位（标准代码，见参数表）1 =台",
                    "example": "1"
                },
                "currency": {
                    "type": "string",
                    "description": "币制代码（标准代码，见参数表）",
                    "example": "142"
                },
                "price": {
                    "type": "number",
                    "description": "单价(元)",
                    "example": "1"
                },
                "length": {
                    "type": "number",
                    "description": "长度(mm)",
                    "example": "1"
                },
                "width": {
                    "type": "number",
                    "description": "宽度(mm)",
                    "example": "1"
                },
                "height": {
                    "type": "number",
                    "description": "高度(mm)",
                    "example": "1"
                },
                "volume": {
                    "type": "number",
                    "description": "体积(立方米)",
                    "example": "1"
                },
                "weight": {
                    "type": "number",
